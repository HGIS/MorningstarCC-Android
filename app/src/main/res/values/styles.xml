<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <style name="Theme.MCCTheme" parent="Theme.AppCompat.Light">
        <item name="android:actionBarStyle">@style/Theme.MCCTheme.MCCActionBar</item>
        <item name="android:actionBarTheme">@style/Theme.MCCTheme.MCCActionBarStyle</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="colorPrimary">@color/theme_main</item>
        <item name="colorPrimaryDark">@color/theme_tint</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/theme_main</item>

        <!-- enable window content transitions -->
        <item name="android:windowContentTransitions">true</item>

        <!-- support for reverse compatibility -->
        <item name="actionBarStyle">@style/Theme.MCCTheme.MCCActionBar</item>
        <item name="actionBarTheme">@style/Theme.MCCTheme.MCCActionBarStyle</item>
    </style>

    <style name="Theme.MCCTheme.Toolbar" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="colorPrimary">@color/theme_main</item>
        <item name="colorPrimaryDark">@color/theme_tint</item>
        <item name="android:navigationBarColor" tools:targetApi="21">@color/theme_main</item>
        <item name="android:textColorPrimary">@color/theme_accent</item>
        <item name="android:textColorSecondary">@color/theme_accent</item>
        <item name="actionMenuTextColor">@color/theme_accent</item>
    </style>

    <style name="Theme.MCCTheme.MCCActionBar" parent="Widget.AppCompat.Light.ActionBar">
        <item name="android:titleTextStyle">@style/Theme.MCCTheme.MCCActionBar.TitleTextStyle</item>
        <item name="android:icon">@android:color/transparent</item>
        <item name="android:background">@color/theme_main</item>
        <item name="background">@color/theme_main</item>

        <!-- support for reverse compatibility -->
        <item name="titleTextStyle">@style/Theme.MCCTheme.MCCActionBar.TitleTextStyle</item>
    </style>

    <style name="Theme.MCCTheme.MCCActionBarStyle" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <item name="colorControlNormal">@color/theme_accent</item>
    </style>

    <style name="Theme.MCCTheme.MCCActionBar.TitleTextStyle" parent="TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/theme_accent</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@color/theme_accent</item>
    </style>

    <style name="test">
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:layout_marginRight">20dp</item>
    </style>

    <style name="HomeButton">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="HomeLabel">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">20dp</item>
        <item name="android:layout_marginLeft">20dp</item>
        <item name="android:textSize">18sp</item>
    </style>

</resources>